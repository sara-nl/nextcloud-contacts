{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ESNext",
		"strictNullChecks": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": [
		"./src/**/*"
	]
}
