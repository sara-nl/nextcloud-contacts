				<referencedClass name="Sabre\DAV\Server" />
			</errorLevel>
		</UndefinedClass>
		<UndefinedDocblockClass>
			<errorLevel type="suppress">
				<referencedClass name="OCA\Files\Event\LoadAdditionalScriptsEvent" />
				<referencedClass name="Sabre\DAV\Server" />
			</errorLevel>
		</UndefinedDocblockClass>
	</issueHandlers>
</psalm>
