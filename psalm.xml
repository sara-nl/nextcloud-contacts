	<projectFiles>
		<directory name="lib" />
		<ignoreFiles>
			<directory name="vendor" />
			<directory name="vendor-bin" />
		</ignoreFiles>
	</projectFiles>
	<extraFiles>
		<directory name="vendor" />
		<directory name="vendor/nextcloud/ocp" />
	</extraFiles>
	<issueHandlers>
